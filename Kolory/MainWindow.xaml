<Window x:Class="Kolory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kolory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Slider x:Name="sliderB" Margin="10,10,10,10" DockPanel.Dock="Bottom"/>
        <Slider x:Name="sliderG" Margin="10,10,10,10" DockPanel.Dock="Bottom"/>
        <Slider x:Name="sliderR" Margin="10,10,10,10" DockPanel.Dock="Bottom"/>
        <Rectangle x:Name="Rectangle" Fill="Bisque" Stroke="Black" Height="244" Margin="10,10,10,10"/>
    </DockPanel>
</Window>
